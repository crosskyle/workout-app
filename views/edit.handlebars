<form action="/" method="post">
    <label for="name">Exercise name:</label>
    <input type="text" name="name" id="name" value = "{{name}}"> <br>
    <label for="reps">Reps:</label>
    <input type="number" name="reps" id="reps" value = "{{reps}}"><br>
    <label for="weight">Weight:</label>
    <input type="number" name="weight" id="weight" value="{{weight}}"><br>
    <input type="radio" name="lbs" value ="1" id = "lbs" {{lbsChecked}}>lbs
    <input type="radio" name="lbs" value="0" id = "lbs" {{kgChecked}}>kg<br>
    <label for="date">Date:</label>
    <input type="text" name="date" id="date" value={{date}}><br><br>
    <input type ="hidden" name="id" value={{id}}>
    <input type="submit" id="update" name="update" value="Update workout">
</form>
